<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#004643"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <ImageView
        android:id="@+id/CalculatorLogo"
        android:layout_width="54dp"
        android:layout_height="64dp"
        android:src="@drawable/spendysense_logo_png" />

    <TextView
        android:id="@+id/tvCalculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Calculate Amount"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:id="@+id/tvCalcResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="48sp"
        android:minHeight="80dp"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_calc_result"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAC"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/round_num_calc_buttons"
            android:text="AC"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginLeft="4dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDel"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/round_num_calc_buttons"
            android:text="DEL"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnDivide"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/rounded_calc_signs_buttons"
            android:text="รท"
            android:textSize="40sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn7"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/round_num_button"
            android:text="7"
            android:textSize="40sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn8"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_num_button"
            android:text="8"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn9"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_num_button"
            android:text="9"
            android:textSize="40sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnMultiply"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_calc_signs_buttons"
            android:text="X"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn4"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/round_num_button"
            android:text="4"
            android:textSize="40sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn5"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_num_button"
            android:text="5"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn6"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_num_button"
            android:text="6"
            android:textSize="40sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubtract"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_calc_signs_buttons"
            android:text="-"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn1"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/round_num_button"
            android:text="1"
            android:textSize="40sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn2"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_num_button"
            android:text="2"
            android:textSize="40sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn3"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_num_button"
            android:text="3"
            android:textSize="40sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddition"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_calc_signs_buttons"
            android:text="+"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="18dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn0"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/round_num_button"
            android:text="0"
            android:textSize="40sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnComma"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/round_num_button"
            android:text=","
            android:textSize="40sp"
            android:textStyle="bold"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnEquals"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/rounded_calc_signs_buttons"
            android:text="="
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginHorizontal="40dp"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_income_button"
        android:text="CONFIRM AMOUNT"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="40dp"/>

</LinearLayout>